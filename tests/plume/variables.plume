let write = quill
/// Output
/// End

/// Test simple affectation and eval
let write = quill
$write
/// Output
quill
/// End

/// Test shadowing
let write = 1
if 1==1
	let write = 2
end
$write
/// Output
1
/// End

/// Test not shadowing
let write = 1
if 1==1
	set write = 2
end
$write
/// Output
2
/// End

/// Test block capture: if 1
let write = if 1==1
	5
else
	3
end
$write
/// Output
5
/// End

/// Test block capture: if 2
let write = if 1==2
	5
else
	3
end
$write
/// Output
3
/// End

/// Test block capture: while
let i = 0
let write = while i<5
	$i
	set i = $(i+1)
end
$write
/// Output
01234
/// End
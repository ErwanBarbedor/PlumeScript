if a > 2
  Foo
end
/// Output
/// End

/// Test if-else true
let a = 5
if a > 2
  Foo
else
  Bar
end
/// Output
Foo
/// End

/// Test if-else false
let a = -1
if a > 2
  Foo
else
  Bar
end
/// Output
Bar
/// End

